<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mygradient"
    tools:context="dicoding.adrian.madesubmission1.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/iv_width"
            android:layout_height="@dimen/iv_height"
            android:layout_gravity="center"
            android:src="@drawable/ic_movies" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/tv_marginTop"
            android:text="@string/tv_text"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_textSize"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>